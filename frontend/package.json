{
    "name": "admin-panel",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "start": "vite --open",
        "build": "tsc && vite build",
        "build:testing": "tsc && vite build --mode testing",
        "build:staging": "tsc && vite build --mode staging",
        "build:production": "tsc && vite build --mode production",
        "build:dev": "tsc && vite build --mode dev",
        "type-check": "tsc --noEmit",
        "lint": "eslint ./src  --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint ./src --fix --report-unused-disable-directives --max-warnings 100",
        "lint:dev": "eslint ./src --report-unused-disable-directives --max-warnings 100",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "sonar": "tsx ./src/shared/Lib/sonar.ts",
        "preview": "vite preview",
        "prepare": "husky",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@hookform/resolvers": "^4.1.3",
        "@tanstack/react-query": "^5.62.2",
        "@tanstack/react-query-devtools": "^5.62.2",
        "axios": "^1.7.9",
        "classnames": "^2.5.1",
        "google-material-icons": "^2.1.2",
        "html-react-parser": "^5.2.3",
        "i18next": "^23.15.2",
        "i18next-browser-languagedetector": "^8.0.0",
        "i18next-http-backend": "^2.6.2",
        "immer": "^10.1.1",
        "lodash": "^4.17.21",
        "mada-design-system": "^0.4.0",
        "moment": "^2.30.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-google-recaptcha-v3": "^1.11.0",
        "react-i18next": "^15.1.2",
        "react-if": "^4.1.5",
        "react-localization": "^1.0.19",
        "react-router-dom": "^7.0.2",
        "sonarqube-scanner": "^4.2.6",
        "streamline-icons": "^0.1.1",
        "usehooks-ts": "^3.1.0",
        "uuid": "^11.1.0",
        "zod": "^3.24.2",
        "zustand": "^5.0.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.15.0",
        "@originjs/vite-plugin-commonjs": "^1.0.3",
        "@originjs/vite-plugin-federation": "^1.3.6",
        "@rollup/plugin-inject": "^5.0.5",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/lodash": "^4.17.13",
        "@types/node": "^22.10.1",
        "@types/react": "18.2.18",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-basic-ssl": "^1.2.0",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^2.1.8",
        "@vitest/ui": "^2.1.8",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.15.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.14",
        "globals": "^15.12.0",
        "happy-dom": "^15.11.6",
        "husky": "^9.1.7",
        "lint-staged": "^15.3.0",
        "postcss": "^8.4.31",
        "postcss-rtlcss": "^4.0.8",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.9",
        "tailwindcss": "^3.4.3",
        "tsx": "^4.19.2",
        "typescript": "~5.6.2",
        "typescript-eslint": "^8.15.0",
        "vite": "^6.0.1",
        "vitest": "^2.1.8"
    },
    "prettier": "./node_modules/mada-design-system/.prettierrc.json",
    "lint-staged": {
        "src/**/*.{tsx,ts}": "pnpm run lint"
    }
}
